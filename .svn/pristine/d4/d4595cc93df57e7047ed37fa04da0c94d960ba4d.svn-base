<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bottom"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tab1_liner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/main_bottom_selector"
            android:layout_marginTop="5dp"
            android:text="首页" />
        <TextView
            android:id="@+id/tab2_liner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/work_bottom_selector"
            android:text="工作面板"
            android:layout_marginTop="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="invisible"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tab3_liner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/project_bottom_selector"
            android:text="项目管理"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tab4_liner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/home_bottom_selector"
            android:text="我的"
            android:layout_marginTop="5dp"/>

    </LinearLayout>


</FrameLayout>